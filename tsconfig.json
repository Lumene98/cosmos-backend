{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./build/",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "node_modules/@algo-builder/types-algosdk"],
  },
  "exclude": [
    "**/node_modules",
    "**/webpack",
    "**/build"
  ],
  "include": [
    "scripts",
    "../@types",
    "test",
    "config"
  ]
}